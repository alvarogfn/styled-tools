{
  "name": "styled-bettertools",
  "version": "0.1.0",
  "description": "A fork of styled-tools with more utilities for css-in-js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alvarogfn/styled-bettertools"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/tools/*/*.js",
      "require": "./dist/tools/*/*.js",
      "types": "./dist/tools/*/*.d.ts"
    }
  },
  "type": "module",
  "author": {
    "name": "Diego Haz",
    "email": "hazdiego@gmail.com",
    "url": "https://github.com/diegohaz"
  },
  "contributors": [
    {
      "name": "Alvaro Guimar√£es",
      "email": "alvaro-contato@outlook.com",
      "url": "https://github.com/alvarogfn"
    }
  ],
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "lint": "eslint src",
    "clean": "rimraf dist",
    "build": "pnpm clean && tsc --project tsconfig.build.json",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --coverage --ui",
    "changeset": "changeset",
    "version": "changeset version",
    "prepublishOnly": "pnpm build",
    "publish": "changeset publish"
  },
  "keywords": [
    "styled-bettertools",
    "styled-tools",
    "styled-components",
    "emotion",
    "css-in-js"
  ],
  "dependencies": {
    "@emotion/react": "11.13.3",
    "@types/node": "22.5.5",
    "dot-prop": "9.0.0",
    "styled-components": "6.1.13"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.8",
    "@eslint-community/eslint-plugin-eslint-comments": "4.4.0",
    "@eslint/js": "9.11.0",
    "@vitest/coverage-istanbul": "2.1.1",
    "@vitest/ui": "2.1.1",
    "eslint": "9.11.0",
    "eslint-define-config": "2.1.0",
    "eslint-plugin-array-func": "5.0.2",
    "eslint-plugin-no-secrets": "1.0.2",
    "eslint-plugin-perfectionist": "3.6.0",
    "eslint-plugin-promise": "7.1.0",
    "eslint-plugin-regexp": "2.6.0",
    "eslint-plugin-unicorn": "55.0.0",
    "eslint-plugin-vitest": "0.5.4",
    "globals": "15.9.0",
    "prettier": "3.3.3",
    "typescript": "5.6.2",
    "typescript-eslint": "8.6.0",
    "vite-tsconfig-paths": "5.0.1",
    "rimraf": "6.0.1",
    "vitest": "2.1.1"
  }
}
