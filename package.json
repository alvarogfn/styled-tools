{
  "name": "styled-bettertools",
  "version": "0.5.1",
  "description": "A fork of styled-tools with more utilities for css-in-js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alvarogfn/styled-bettertools"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/tools/*/*.js",
      "require": "./dist/cjs/tools/*/*.js",
      "types": "./dist/tools/*/*.d.ts"
    }
  },
  "type": "module",
  "author": {
    "name": "Diego Haz",
    "email": "hazdiego@gmail.com",
    "url": "https://github.com/diegohaz"
  },
  "contributors": [
    {
      "name": "Alvaro Guimar√£es",
      "email": "alvaro-contato@outlook.com",
      "url": "https://github.com/alvarogfn"
    }
  ],
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "types"
  ],
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "format": "pnpm lint:fix && prettier --write .",
    "clean": "rimraf dist",
    "dev": "tsc --watch --project tsconfig.build.json",
    "build": "pnpm clean && tsc --project tsconfig.build.json && pnpm build:cjs",
    "build:cjs": "npx swc src -d dist/cjs --strip-leading-paths -s --copy-files",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --coverage --ui",
    "changeset": "changeset",
    "version:ci": "changeset version",
    "prepublishOnly": "pnpm build",
    "publish:ci": "changeset publish",
    "prepare": "ts-patch install -s"
  },
  "keywords": [
    "styled-bettertools",
    "styled-tools",
    "styled-components",
    "emotion",
    "css-in-js"
  ],
  "dependencies": {},
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.9",
    "@eslint-community/eslint-plugin-eslint-comments": "4.4.0",
    "@eslint/js": "9.14.0",
    "@swc/cli": "0.4.1-nightly.20240914",
    "@types/node": "22.9.0",
    "@vitest/coverage-istanbul": "2.1.1",
    "@vitest/ui": "2.1.1",
    "eslint": "9.14.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-define-config": "2.1.0",
    "eslint-plugin-array-func": "5.0.2",
    "eslint-plugin-no-secrets": "1.1.2",
    "eslint-plugin-perfectionist": "4.6.0",
    "eslint-plugin-promise": "7.1.0",
    "eslint-plugin-regexp": "2.6.0",
    "eslint-plugin-unicorn": "56.0.0",
    "eslint-plugin-vitest": "0.5.4",
    "globals": "15.12.0",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "ts-patch": "3.2.1",
    "type-fest": "4.26.1",
    "typescript": "5.5.4",
    "typescript-eslint": "8.8.0",
    "typescript-transform-paths": "3.5.2",
    "vite-tsconfig-paths": "5.1.3",
    "vitest": "2.1.1"
  }
}
